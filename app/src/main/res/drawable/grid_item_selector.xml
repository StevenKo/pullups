<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/selected_gray" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/selected_gray" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/selected_gray" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_activated="true">
        <shape>
            <solid android:color="@color/selected_gray" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/selected_gray" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/sub_backgroundcolor" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>